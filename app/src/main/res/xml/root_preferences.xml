<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

<PreferenceCategory app:title="@string/title_activity_settings" >
        <ListPreference
            app:defaultValue="66"
            app:entries="@array/temperature_entries"
            app:entryValues="@array/temperature_values"
            app:key="soft"
            app:title="@string/soft"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="72"
            app:entries="@array/temperature_entries"
            app:entryValues="@array/temperature_values"
            app:key="medium"
            app:title="@string/medium"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="86"
            app:entries="@array/temperature_entries"
            app:entryValues="@array/temperature_values"
            app:key="hard"
            app:title="@string/hard"
            app:useSimpleSummaryProvider="true" />

</PreferenceCategory>

</PreferenceScreen>